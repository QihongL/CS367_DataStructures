
public class GeneralTesting {

	public static void main(String[] args) {
		// TODO Auto-generated method stub

		String temp1 = "asdasd";
		String temp2 = "asdasd1";
//		String [] strArr = temp.split("\\.");
//		System.out.println(strArr.length);
//		System.out.println(strArr[0]);

		System.out.println(nameValidation(temp1));
		System.out.println(nameValidation(temp2));
		
		
	}

	
	private static boolean nameValidation(String name){
		
		char firstLetter = name.charAt(0);
		if(!Character.isLetter(firstLetter)){
			System.out.println("*1st e not letter");
			return false;
		}
		if (!name.matches("[a-zA-Z]")){
			System.out.println("* all letters");
			return false;
		}
		return true;
	}
}
