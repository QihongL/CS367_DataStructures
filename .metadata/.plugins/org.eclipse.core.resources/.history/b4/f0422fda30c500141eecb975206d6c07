
public class vowels_recur {

	public static boolean isVowels(char letter){
		String vowels = "aeiou";
		
		for (int i = 0; i < vowels.length(); i ++){
			System.out.println(vowels.charAt(i));
			if (letter == vowels.charAt(i))
				return true;
		}
		return false;
	}
	
	
	
